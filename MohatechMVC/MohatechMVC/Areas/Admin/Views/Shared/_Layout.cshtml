<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مُهاتک - @ViewBag.Title</title>
    @Styles.Render("~/Content/Styles")
    @Styles.Render("~/Content/FontAwesome")
</head>
<body>
    <!-- Header -->
    <section id="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="user">
                        <img src="~/Content/Image/user.png" alt="" />
                        <h3>محمد علاوی</h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="notification">
                        <a href="#">
                            <span class="badge badge-primary">3</span>
                            <i class="far fa-bell"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">1</span>
                            <i class="far fa-envelope"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">4</span>
                            <i class="far fa-comments"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">2</span>
                            <i class="fas fa-exclamation"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Content -->
    <section id="content">
        <div class="row">
            <div class="col-lg-3 side-bar">
                <div class="menu">
                    <ul class="list-unstyled">
                        <li>
                            <a class="active" href="/Admin/Home/Index "><i class="fas fa-box"></i> داشبورد</a>
                        </li>
                        <li>
                            <a href="/Admin/Setting/Index"><i class="fas fa-toolbox"></i> تنظیمات سایت</a>
                        </li>
                        <li>
                            <a href="/Admin/Users/Index"><i class="fas fa-users"></i> مدیریت کاربران</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-tv"></i> مدیریت اسلایدر</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-project-diagram"></i> مدیریت نمونه کارها</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-building"></i> مدیریت شرکت ها</a>
                        </li>
                        <li>
                            <a href="#"><i class="fab fa-pied-piper-alt"></i> مدیریت مشتریان</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-tv"></i> مدیریت اسلایدر</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-project-diagram"></i> مدیریت نمونه کارها</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-building"></i> مدیریت شرکت ها</a>
                        </li>
                        <li>
                            <a href="#"><i class="fab fa-pied-piper-alt"></i> مدیریت مشتریان</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="copy-right">
                <p>کپی رایت</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>